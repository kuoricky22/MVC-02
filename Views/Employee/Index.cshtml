條件查詢(多筆)
@{
    List<EmployeeModel> filterEmployee = Model.Where(x => x.EmpNo == "EN3684").ToList();
}
<table border="1">
    <tr>
        <th>姓名</th>
        <th>員工編號</th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in filterEmployee)
        {
            <tr>
                <td>@item.Name</td>
                <td> @item.EmpNo</td>
            </tr>
        }

    }
</table>


